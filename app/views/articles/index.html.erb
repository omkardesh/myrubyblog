<h1>Article Listings</h1>

<%= link_to 'Create an article', new_article_path %>
<br>
<br>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>

	<% @allarticles.each do |x| %>
		<tr>
			<td><%= x.title %> </td>
			<td><%= x.description %> </td>
			<td><%= link_to 'Edit', edit_article_path(x)%></td>
			<td><%= link_to 'Show', article_path(x) %></td>
		</tr>
	<% end %>
</table>
